<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Filters Section -->
    <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f5f5f5;">
        <TextField fx:id="searchField" promptText="Cerca per descrizione..." prefWidth="200"/>
        <ComboBox fx:id="typeFilter" promptText="Tipo movimento" prefWidth="150"/>
        <DatePicker fx:id="startDateFilter" promptText="Data inizio" prefWidth="120"/>
        <DatePicker fx:id="endDateFilter" promptText="Data fine" prefWidth="120"/>
        <Button fx:id="filterButton" text="Filtra"/>
        <Button fx:id="clearFilterButton" text="Pulisci"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button fx:id="addMovementButton" text="Nuovo Movimento" style="-fx-background-color: #4caf50; -fx-text-fill: white;"/>
    </HBox>

    <!-- Table Section -->
    <TableView fx:id="movementsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="dateColumn" text="Data" prefWidth="100"/>
            <TableColumn fx:id="descriptionColumn" text="Descrizione" prefWidth="250"/>
            <TableColumn fx:id="typeColumn" text="Tipo" prefWidth="100"/>
            <TableColumn fx:id="amountColumn" text="Importo" prefWidth="120"/>
            <TableColumn fx:id="categoriesColumn" text="Categorie" prefWidth="200"/>
        </columns>
    </TableView>

    <!-- Actions Section -->
    <HBox spacing="10" style="-fx-padding: 10;">
        <Button fx:id="editMovementButton" text="Modifica"/>
        <Button fx:id="deleteMovementButton" text="Elimina" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Label text="Totale movimenti: "/>
        <Label fx:id="totalMovementsLabel" text="0"/>
    </HBox>

</VBox>